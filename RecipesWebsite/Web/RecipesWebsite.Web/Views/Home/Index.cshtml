@using RecipesWebsite.Common
@model RecipesWebsite.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <p>We have: </p>
    <div class="col-md-4 offset-md-4">
        <ul class="list-group">
            <li class="list-group-item">@Model.RecipesCount Recipes</li>
            <li class="list-group-item">@Model.IngredientsCount Ingredients</li>
            <li class="list-group-item">@Model.CategoriesCount Categories</li>
            <li class="list-group-item">@Model.ImagesCount Images</li>
        </ul>
    </div>
    
</div>